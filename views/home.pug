doctype html
mixin navBtn(link,text)
    li.navigation__item
        a.navigation__link(href=`${link}`)
            span
            | #{text}

html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="Hi, I'm Md.Robiul Islam, this is the Natours Landing Page I've built from Udemy course and it was designed by Jonas Schmedtmann.")
        meta(name="keywords", content="Natours Project, Natours")
        meta(name="author", content="MD.Robiul Islam, Robiul, Robi")
        link(href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900", rel="stylesheet")
        link(rel="stylesheet", href="css/homestyle.css")
        link(rel="shortcut icon", type="image/png", href="img/favicon.png")
        title Natours | Exciting tours for adventurous people | Robiul
    body
        .navigation
            input#navi-toggle(type="checkbox", class="navigation__checkbox")
            label(for="navi-toggle", class="navigation__button")
                span.navigation__icon &nbsp;
            .navigation__background &nbsp;
            nav.navigation__nav
                ul.navigation__list
                    +navBtn('/about','About Natours')
                    +navBtn('#','Your benefits')
                    +navBtn('#','Popular tours')
                    +navBtn('/become-a-guide','Become A guide')
                    +navBtn('#','Stories')
                    +navBtn('#','Book now')
        header.header
            .header__logo-box
                a(href="/overview")
                    img.header__logo(src="img/logo-white.png", alt="Logo")
            .header__text-box
                h1.heading-primary
                    span.heading-primary--main Outdoors
                    span.heading-primary--sub is when life happens
                a.btn.btn--white.btn--animated(href="#section-tours") Discover our tours
        main
            section.section-about
                .u-center-text.u-margin-bottom-big
                    h2.heading-secondary  Exciting tours for adventures people 
                .row
                    .col-1-of-2
                        if tours.length && tours[0].reviews.length && tours[1].reviews.length

                            .nav__user-review-info
                                img.nav__user-img(src=`/img/users/${tours[0].reviews[0].user.photo}` alt=`Photo of ${tours[0].reviews[0].user.name}`)
                                h3.heading-tertiary.u-margin-bottom-small= tours[0].reviews[0].user.name
                            p.paragraph= tours[0].reviews[0].review
                            .nav__user-review-info
                                img.nav__user-img(src=`/img/users/${tours[1].reviews[0].user.photo}` alt=`Photo of ${tours[1].reviews[0].user.name}`)
                                h3.heading-tertiary.u-margin-bottom-small= tours[1].reviews[0].user.name
                            p.paragraph= tours[1].reviews[0].review
                            a.btn-text(href="#") Learn more &rarr;
                        else 
                            h3 No user data available
                    .col-1-of-2
                        .composition
                            each tour,i in tours 
                                img(srcset=`/img/tours/${tour.images[0]} 300w, /img/tours/${tour.images[1]} 1000w`, sizes="(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px", alt=`${tour.name}`, class=`composition__photo composition__photo--p${i+1}`, src=`/img/tours/${tour.images[0]}`)

            section.section-features
                .row
                    .col-1-of-4
                        .feature-box
                            i(class="feature-box__icon") E
                            h3.heading-tertiary.u-margin-bottom-small Explore The World
                            p(class="feature-box__text") Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio, expedita.
                    .col-1-of-4
                        .feature-box
                            i(class="feature-box__icon") M
                            h3.heading-tertiary.u-margin-bottom-small Meet Nature
                            p(class="feature-box__text") Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio, expedita.
                    .col-1-of-4
                        .feature-box
                            i(class="feature-box__icon") F
                            h3.heading-tertiary.u-margin-bottom-small Find Your Way
                            p(class="feature-box__text") Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio, expedita.
                    .col-1-of-4
                        .feature-box
                            i(class="feature-box__icon") L
                            h3.heading-tertiary.u-margin-bottom-small Live healthier life
                            p(class="feature-box__text") Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio, expedita.
            section#section-tours.section-tours
                .u-center-text.u-margin-bottom-big
                    h2.heading-secondary  Most popular tours 
                .row
                    each tour, i in tours
                        .col-1-of-3
                            .card
                                .card__side.card__side--front(class=`card__side--front-${i+1}`)
                                    img.card__picture(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                                    h4.card__heading
                                        span.card__heading-span(class=`card__heading-span--${i+1}`)= tour.name 
                                    .card__details
                                        ul
                                            li= `${tour.duration} day tours`
                                            li= `Up to ${tour.maxGroupSize} people`
                                            li= `${tour.guides.length} tour guides`
                                            li= `Sleep in provided tents`
                                            li= `Difficulty: ${tour.difficulty}`
                                .card__side.card__side--back(class=`card__side--back-${i+1}`)
                                    .card__cta
                                        .card__price-box
                                            .card__price-only Only
                                            p.card__price-value= `â‚±${tour.price}`
                                        a.btn.btn--white(href="#popup") Book now
                    
                .u-center-text.u-margin-top-huge
                    a.btn.btn--green(href='/overview') Discover all tours
            section.section-stories
                .bg-video
                    video(class="bg-video__content", autoplay, muted, loop)
                        source(src="img/video.mp4", type="video/mp4")
                        source(src="img/video.webm", type="video/mp4")
                        | Your browser is not supported!
                .u-center-text.u-margin-bottom-big
                    h2.heading-secondary  We make people genuinely happy 
                .row
                    .story
                        figure.story__shape
                            img.story__img(src=`/img/users/${tours[0].reviews[0].user.photo}` alt=`Photo of ${tours[0].reviews[0].user.name}`)
                            figcaption.story__caption= tours[0].name
                        .story__text
                            h3.heading-tertiary.u-margin-bottom-small= tours[0].summary
                            p= tours[0].description
                .row
                    .story
                        figure.story__shape
                            img.story__img(src=`/img/users/${tours[1].reviews[0].user.photo}` alt=`Photo of ${tours[1].reviews[0].user.name}`)
                            figcaption(class="story__caption")= tours[1].name
                        .story__text
                            h3.heading-tertiary.u-margin-bottom-small= tours[1].summary
                            p= tours[1].description
                .u-center-text.u-margin-top-huge
                    a.btn-text(href="#") Read all stories &rarr;
            section.section-book
                .row
                    .book
                        .book__form
                            form.form(action="#")
                                .u-margin-bottom-medium
                                    h2.heading-secondary Start booking now
                                .form__group
                                    input#name(type="text", class="form__input", placeholder="Full name", required)
                                    label(for="name", class="form__label") Full name
                                .form__group
                                    input#email(type="email", class="form__input", placeholder="Email address", required)
                                    label(for="email", class="form__label") Email address
                                .form__group
                                    .form__radio-group
                                        input#small(type="radio", class="form__radio-input", name="size")
                                        label(for="small", class="form__radio-label")
                                            span.form__radio-button
                                            | Small tour group
                                    .form__radio-group.u-margin-bottom-medium
                                        input#large(type="radio", class="form__radio-input", name="size")
                                        label(for="large", class="form__radio-label")
                                            span(class="form__radio-button")
                                            | Large tour group
                                .form__group
                                    button.btn.btn--green Next step &rarr;
            footer.footer
                .footer__logo-box
                    picture.footer__logo
                        source(srcset="img/logo-green-small-1x.png 1x, img/logo-green-small-2x.png 2x", media="(max-width: 37.5em)")
                        img(srcset="img/logo-green-1x.png 1x, img/logo-green-2x.png 2x", alt="Full logo", src="img/logo-green-2x.png")
                .row
                    .col-1-of-2
                        .footer__navigation
                            ul(class="footer__list")
                                li.footer__item
                                    a(href="#", class="footer__link") Company
                                li.footer__item
                                    a(href="#", class="footer__link") Contact us
                                li.footer__item
                                    a(href="#", class="footer__link") Careers
                                li.footer__item
                                    a(href="3", class="footer__link") Privacy Policy
                                li.footer__item
                                    a(href="#", class="footer__link") Terms
                    .col-1-of-2
                        p.footer__copyright Change by : 
                            a.footer__link(href='#') MD.Robiul Islam 
            #popup.popup
                .popup__content
                    .popup__left
                        img.popup__img(src="img/nat-8.jpg", alt="Tour photo")
                        img.popup__img(src="img/nat-9.jpg", alt="Tour photo")
                    .popup__right
                        a(href="#section-tours", class="popup__close") &times;
                        h2.heading-secondary.u-margin-bottom-small  Start booking now 
                        h3.heading-tertiary.u-margin-bottom-small  Important &ndash; Please read these terms before booking. 
