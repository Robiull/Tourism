extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Send Email to Reset Password
            form.form.form--forgot-password
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='yourmail@example.com', required)
                .form__group.btn-middle
                    button.btn.btn--red.btn--login Send Email
    