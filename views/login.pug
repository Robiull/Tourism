extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log Into Your Account
            form.form.form--login
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='yourmail@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.space-btwn
                    button.btn.btn--green.btn--login Login
                    a.a-tag.btn--forgot-password(href='/forgotPassword') Forgot Password
    